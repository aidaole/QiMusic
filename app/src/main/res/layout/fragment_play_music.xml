<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black_600"
    tools:context=".modules.playmusic.PlayMusicFragment">

    <ImageView
        android:layout_width="@dimen/icon_mid_size"
        android:layout_height="@dimen/icon_mid_size"
        android:layout_margin="@dimen/padding_edge"
        android:src="@drawable/ic_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.aidaole.aimusic.modules.playmusic.MusicListRecyclerView
        android:id="@+id/play_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>