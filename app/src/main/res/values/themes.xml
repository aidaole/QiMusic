<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AiMusic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextTitleStyle1" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textFontWeight">800</item>
    </style>

    <style name="TextTitleStyle2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textFontWeight">800</item>
    </style>

    <style name="TextNormalStyle1" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextNormalStyle2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textFontWeight">500</item>
    </style>
</resources>